{
  "manifest_version": 3,
  "name": "SUNAT AutoLogin - Auto (hash)",
  "version": "1.2",
  "description": "Detecta #autologin=<payload> y autocompleta el login de SUNAT. Manejo de sesiones por sistema.",
  "permissions": [
    "storage",
    "cookies",
    "tabs",
    "webNavigation",
    "windows"
  ],
  "host_permissions": [
    "https://api-seguridad.sunat.gob.pe/*",
    "https://e-menu.sunat.gob.pe/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "SUNAT AutoLogin"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.sunat.gob.pe/*"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "incognito": "split"
}